<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
  <display-name>Archetype Created Web Application</display-name>
  <servlet>
    <servlet-name>AddEmployeeServlet</servlet-name>
    <servlet-class>employee.servlets.AddEmployeeServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>ViewAllEmployees</servlet-name>
    <servlet-class>employee.servlets.ViewAllEmployees</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>RemoveEmployeeServlet</servlet-name>
    <servlet-class>employee.servlets.RemoveEmployeeServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>ViewEmployeeServlet</servlet-name>
    <servlet-class>employee.servlets.ViewEmployeeServlet</servlet-class>
  </servlet>
  
  <servlet-mapping>
    <servlet-name>AddEmployeeServlet</servlet-name>
    <url-pattern>/AddEmployeeServlet</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>ViewAllEmployees</servlet-name>
    <url-pattern>/ViewAllEmployees</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>RemoveEmployeeServlet</servlet-name>
    <url-pattern>/RemoveEmployeeServlet</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>ViewEmployeeServlet</servlet-name>
    <url-pattern>/ViewEmployeeServlet</url-pattern>
  </servlet-mapping>
</web-app>
